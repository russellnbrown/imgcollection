<UserControl x:Class="pplot.RunwayControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:pplot"
             mc:Ignorable="d" 
             d:DesignHeight="450" Width="200">
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition MinHeight="300" Height="*" />
            <RowDefinition MinHeight="100" MaxHeight="150" Height="*" />
        </Grid.RowDefinitions>

        <Grid Name="txtGrid" Grid.Column="0" Grid.Row="0" Background="LightGray">
            <TextBlock Name="header"  />
        </Grid>
        <Grid Name="aprGrid" Grid.Column="0" Grid.Row="1" Background="Aqua"></Grid>
        <Grid Name="depGrid" Grid.Column="0" Grid.Row="2" Background="Aquamarine"></Grid>
    </Grid>
</UserControl>
